<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Developers">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/linearLayoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/white_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/black" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView_holder"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@drawable/blank_dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@drawable/blank_dp" />

            <TextView
                android:id="@+id/dev_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/white_imageView"
                android:fontFamily="sans-serif-condensed"
                android:text="NAME"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/batch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dev_name"
                android:text="Computer Engineering 2018"
                android:textAlignment="center"
                android:textColor="#757575"
                android:textSize="16sp" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dev_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/dev_github"
                android:layout_marginRight="34dp"
                android:layout_toLeftOf="@+id/white_imageView"
                android:layout_toStartOf="@+id/white_imageView"
                android:src="@drawable/facebok"
                app:backgroundTint="#fff" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dev_github"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/dev_name"
                android:layout_marginBottom="21dp"
                android:layout_marginLeft="34dp"
                android:layout_toEndOf="@+id/white_imageView"
                android:layout_toRightOf="@+id/white_imageView"
                android:src="@drawable/github"
                app:backgroundTint="#fff" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>