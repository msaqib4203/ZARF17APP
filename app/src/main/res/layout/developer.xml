<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Developers">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/linearLayoutCardContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF"
            android:orientation="vertical">
            <!--By Mark Gurney [CC BY 3.0 (http://creativecommons.org/licenses/by/3.0)], via Wikimedia Commons -->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/white_imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:src="@drawable/white" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:src="@drawable/blank_dp" />

            <LinearLayout
                android:id="@+id/toggler_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/dev_name"
                    android:layout_width="298dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageView"
                    android:layout_marginTop="5sp"
                    android:fontFamily="sans-serif-condensed"
                    android:text="NAME"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageViewExpand"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/details"
                    android:src="@mipmap/more" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/linearLayoutDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/toggler_layout"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/batch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Computer Engineering 2018"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dev_facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginStart="130dp"
                    android:src="@drawable/facebok" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/dev_github"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/dev_facebook"
                    android:layout_marginLeft="34dp"
                    android:layout_marginStart="34dp"
                    android:layout_toEndOf="@+id/dev_facebook"
                    android:layout_toRightOf="@+id/dev_facebook"
                    android:src="@drawable/github" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>