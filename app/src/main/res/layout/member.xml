<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:contentPaddingLeft="1dp"
        android:paddingRight="1dp"
        android:paddingTop="1dp"
        app:cardBackgroundColor="#F7F9FB"
        app:cardCornerRadius="5dp"
        android:id="@+id/fmember"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        android:layout_height="100dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/layout1">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/photo"
                    android:layout_width="60dp"
                    android:layout_marginLeft="5dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:transitionName="display_picture"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="1dp"
                android:fontFamily="sans-serif-condensed"
                android:paddingBottom="2dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:id="@+id/faculty_name"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="Title"
                android:transitionName="title"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/photo"
                android:layout_toRightOf="@+id/photo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="2dp"
                android:textSize="16sp"
                android:paddingRight="2dp"
                android:id="@+id/designation"
                android:textColor="#B0B9B0"
                android:text="Uploaded By"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:layout_below="@+id/faculty_name"
                android:layout_alignStart="@+id/faculty_name"
                android:layout_alignLeft="@+id/faculty_name"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>